<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.communeapp.commune">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginRegisterActivity" />
        <activity android:name=".AddGroupActivity" />
        <activity android:name=".CreateIssueActivity" />
        <activity
            android:name=".GroupsListViewActivity"
            android:label="@string/title_activity_groups_list_view"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.communeapp.commune.MainActivity" />
        </activity>
        <activity
            android:name=".GroupActivity"
            android:label="@string/title_activity_group">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.communeapp.commune.GroupsListViewActivity" />
        </activity>
        <activity
            android:name=".MemberListActivity"
            android:label="@string/title_activity_member_list"
            android:parentActivityName=".GroupActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="xyz.communeapp.commune.GroupActivity" />
        </activity>
    </application>

</manifest>