<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="xyz.communeapp.commune.Activities.MyGroupsActivities.GroupActivities.GroupActivity">

    <TextView
        android:id="@+id/group_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="TextView"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/group_id_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_name_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:text="TextView"
        android:textSize="24sp" />

    <Button
        android:id="@+id/issues_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/members_button"
        android:layout_marginTop="7dp"
        android:background="@color/authui_colorPrimaryDark"
        android:text="Issues"
        android:textColor="@color/buttonTextColor" />

    <Button
        android:id="@+id/resources_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/issues_button"
        android:layout_marginTop="9dp"
        android:background="@color/authui_colorPrimaryDark"
        android:text="Resources"
        android:textColor="@color/buttonTextColor" />

    <Button
        android:text="Delete Group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:id="@+id/delete_group_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/leave_group_button"
        android:background="@android:color/holo_red_dark"
        android:layout_alignEnd="@+id/leave_group_button"
        android:textColor="@color/buttonTextColor" />

    <Button
        android:id="@+id/members_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:background="@color/authui_colorPrimaryDark"
        android:text="Members"
        android:textColor="@color/buttonTextColor"
        android:layout_below="@+id/group_id_textView"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/leave_group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:elevation="3dp"
        android:padding="8dp"
        android:text="Leave Group"
        android:textColor="@color/buttonTextColor"
        android:layout_above="@+id/delete_group_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />


</RelativeLayout>
