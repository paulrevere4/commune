<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="xyz.communeapp.commune.GroupActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:textSize="24sp"
        android:id="@+id/group_name_textView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:textSize="24sp"
        android:id="@+id/group_id_textView"
        android:layout_below="@+id/group_name_textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Tasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/members_button"
        android:layout_marginTop="7dp"
        android:id="@+id/tasks_button"
        android:textColor="@color/buttonTextColor"
        android:background="@color/authui_colorPrimaryDark"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Resources"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:id="@+id/resources_button"
        android:background="@color/authui_colorPrimaryDark"
        android:textColor="@color/buttonTextColor"
        android:layout_below="@+id/tasks_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="158dp"
        android:textColor="@color/buttonTextColor"
        android:background="@color/authui_colorPrimaryDark"
        android:id="@+id/members_button"
        android:layout_below="@+id/group_id_textView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
